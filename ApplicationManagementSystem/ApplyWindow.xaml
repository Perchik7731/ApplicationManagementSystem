<Window x:Class="ApplicationManagementSystem.ApplyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationManagementSystem"
        mc:Ignorable="d"
        Title="ApplyWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="FIOTextBox" Text="ФИО" Margin="0,10,0,0"/>
            <TextBox x:Name="PasportTextBox" Text="Паспорт" Margin="0,10,0,0"/>
            <TextBox x:Name="PhoneNumberTextBox" Text="Номер телефона" Margin="0,10,0,0"/>
            <TextBox x:Name="AverageGradeTextBox" Text="Средний балл аттестата" Margin="0,10,0,0"/>
            <ComboBox x:Name="SpecialtyComboBox" Margin="0,10,0,0">
                <ComboBoxItem Content="Информационные технологии"/>
                <ComboBoxItem Content="Экономика"/>
                <ComboBoxItem Content="Юриспруденция"/>
            </ComboBox>
            <Button x:Name="ApplyBtn" Click="ApplyBtn_Click" Content="Отправить" Width="110" Height="20" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
